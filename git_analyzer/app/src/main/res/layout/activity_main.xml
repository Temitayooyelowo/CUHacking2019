<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.anychart.AnyChartView
        android:id="@+id/first_graph"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.anychart.AnyChartView>

    <com.anychart.AnyChartView
        android:id="@+id/second_graph"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.anychart.AnyChartView>

    <com.anychart.AnyChartView
        android:id="@+id/third_graph"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="364dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.anychart.AnyChartView
        android:id="@+id/fourth_graph"
        android:layout_width="151dp"
        android:layout_height="136dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.anychart.AnyChartView>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/search_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="336dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Jon Doe"
        android:textAlignment="textStart"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar" />

    <TextView
        android:id="@+id/commits_txt"
        android:layout_width="128dp"
        android:layout_height="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:text="@string/commits"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/num_of_commits"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/num_of_commits"
        android:layout_width="128dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="140dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/num_of_pulls"
        android:layout_width="128dp"
        android:layout_height="29dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="140dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pulls_txt"
        android:layout_width="128dp"
        android:layout_height="23dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        android:text="@string/pulls"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/num_of_pulls"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/repos_made_txt"
        android:layout_width="172dp"
        android:layout_height="26dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="12dp"
        android:text="@string/repos"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/num_of_repos"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/num_of_repos"
        android:layout_width="128dp"
        android:layout_height="29dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="52dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>